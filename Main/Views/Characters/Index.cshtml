@model Main.ViewModels.CharactersViewModel
@{
    ViewData["Title"] = "Gestion des personnages";
}

<h2>Gestion des personnages</h2>

<div id="container-left" class="pull-left">
    <table class="table table-hover">
        <tr>
            <th>Pseudo</th>
            <th>Xp</th>
            <th>Lvl</th>
            <th>Po</th>
            <th>Race</th>
            <th>Type</th>
        </tr>
        @foreach (var charac in Model.Characters)
        {
            <tr id="@charac.Nom">
                    <td class="details">@charac.Nom</td>
                    <td class="details">@charac.Xp</td>
                    <td class="details">@charac.Lvl</td>
                    <td class="details">@charac.Po</td>
                    <td class="details">@charac.Race</td>
                    <td class="details">@charac.TypePerso</td>
            </tr>
        }
    </table>
</div>
<div id="container-right" class="pull-right">
    <form asp-control="Characters" asp-action="Details" class="col-lg-12">
        <div class="form-group">
            <label asp-for="@Model.DetailsPerso.Charac.Nom">Pseudo : </label>
            <input type="text" asp-for="@Model.DetailsPerso.Charac.Nom"/>
            <hr />
        </div>
        <div class="form-group">
            <label for="Pseudo">Pseudo : </label>
            <input type="text" id="Pseudo"/>
        </div>
        <div class="form-group">
            <label for="Pseudo">Pseudo : </label>
            <input type="text" id="Pseudo"/>
        </div>
    </form>
</div>