@using DTM.Core.Enums
@using DTM.Core.Extensions
@using DTM.Core.Utils
@using DTM.Core.Models
@using DTM.DbManager.Enums
@model DTM.Core.ViewModels.CharacterDetailsViewModel

<h1 class="text-center col-lg-12 col-lg-offset-1">Fiche de personnage</h1>

@if (Model?.Perso == null)
{
    <h3 class="text-center col-lg-12 col-lg-offset-1">Sélectionnez un personnage dans le tableau pour voir sa fiche complète</h3>
}
else
{
     var perso = Model.Perso;
     var caracs = Model.Perso?.Carac?.FirstOrDefault();
     var jauges = Model.Perso.Jauge?.FirstOrDefault();
     var stats = Model.Perso.Stat?.FirstOrDefault();
     var elements = Model.Perso.ElementPerso?.ToList();
     var skills = Model.Perso.SkillPerso?.ToList();
     var dons = Model.Perso.DonPerso?.OrderBy(ob => ob.Taux).ToList();
     var demons = Model.Perso.DemonPerso?.ToList();
     var inventaire = Model.Perso.Inventaire?.ToList();
     var metiers = Model.Perso.MetierPerso?.ToList();
     var passifs = Model.Perso.PassifPerso?.ToList();
     var characPic = Model.CharacterPicture ?? string.Empty;

    <div id="detailsPersoScrolling" class="col-lg-12 col-lg-offset-1">
        <div id="detailsPerso">
            <span id="idPerso" hidden>@perso.Id</span>
            <h2 id="nomPerso" class="text-center">@perso.Nom</h2>
            <h3 id="raceperso" class="text-center">@(perso.Race)</h3>

            <img class="center-block" idPerso="characPic" src="@characPic" alt="Image de @perso.Nom"/>
            
            <br />

            <button class="btn btn-primary center-block" data-toggle="modal" data-target="#modifPic" type="button">Modifier l'image</button>

            <br/>

            <table class="table detailsTab">
                <!-- Caractéristiques -->
                <tr class="text-center">
                    <td>Lvl : @perso.Lvl</td>
                    <td>Xp : @perso.Xp</td>
                    <td>Po : @perso.Po</td>
                    <td>
                        Type :
                        @if (perso.TypePerso != null)
                        {
                            @(((CharacterTypeEnum) perso.TypePerso).ToString().ToUpper())
                        }
                    </td>
                    <td>
                        <button class="btn btn-primary center-block" data-toggle="modal" data-target="#modifCharac" type="button">Modifier</button>
                    </td>
                </tr>
            </table>


            <hr/>

            @if (jauges != null)
            {
                <table class="table table-bordered detailsTab">
                    <!-- Jauges -->
                    <tr>
                        <th class="text-center">Vie</th>
                        <th class="text-center">Psy</th>
                        <th class="text-center">Synchro</th>
                        <th></th>
                    </tr>
                    <tr class="text-center">
                        <!-- Jauge de vie -->
                        <td class="text-center">
                            @jauges.Vie / @jauges.VieMax
                        </td>
                        <!-- Jauge de psy -->
                        <td class="text-center">
                            @jauges.Psy / @jauges.PsyMax
                        </td>
                        <!-- Jauge de synchro -->
                        <td class="text-center">
                            @jauges.Sync / @jauges.SyncMax
                        </td>
                        <td>
                            <button class="btn btn-primary" data-toggle="modal" data-target="#modifJauges" type="button">Modifier</button>
                        </td>
                    </tr>
                </table>
            }

            @if (stats != null)
            {
                <table class="table table-bordered detailsTab">
                    <!-- Stats -->
                    <tr>
                        <th class="text-center">Physique</th>
                        <th class="text-center">Mental</th>
                        <th class="text-center">Social</th>
                        <th class="text-center"></th>
                    </tr>
                    <tr class="text-center">
                        <!-- Physique -->
                        <td class="form-group">
                            @stats.Phy %
                        </td>
                        <!-- Mental -->
                        <td class="form-group">
                            @stats.Mental %
                        </td>
                        <!-- Social -->
                        <td class="form-group">
                            @stats.Social %
                        </td>
                        <td width="135px">
                            <button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifStats" type="button">Modifier</button>
                        </td>
                    </tr>
                </table>

            }
            <table class="table table-bordered detailsTab">
                <tr>
                    <th>Passifs<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifPassifs" type="button">Modifier</button></th>
                    <th>Dons<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifDons" type="button">Modifier</button></th>
                    <th>Element<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifElements" type="button" disabled>Modifier</button></th>
                    <th>Demons<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifDemons" type="button" disabled>Modifier</button></th>
                    <th>Langues<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifLangues" type="button" disabled>Modifier</button></th>
                </tr>
                <tr>
                    <td>
                        @if (caracs != null)
                        {
                            <span>Attaque : @caracs.Atk<br/></span>
                            <span>Défense : @caracs.Def<br/></span>
                            <span>Rapidité : @caracs.Rap<br/></span>
                        }
                    </td>
                    <td width="300px">
                        @foreach (var d in dons)
                        {
                            var description = d.Don.Description != string.Empty ? ":" + d.Don.Description : string.Empty;
                            <span>[@d.Taux%] @d.Don.Libelle @description<br/></span>
                        }
                    </td>
                    <td>
                        @if (elements != null)
                        {
                            foreach (var e in elements)
                            {
                                var description = e.Element.Description != string.Empty ? ":" + e.Element.Description : string.Empty;
                                <span>@e.Element.Libelle @description</span>
                            }
                        }
                    </td>
                    <td>
                        @if (demons != null)
                        {
                            foreach (var d in demons)
                            {
                                <span>@d.Demon.Nom</span>
                            }
                        }
                    </td>
                    <td></td>
                </tr>
            </table>

            @if (skills != null)
            {
                <table class="table table-bordered detailsTab">
                    <tr>
                        <th colspan="4" class="text-center">Skills<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifSkills" type="button">Modifier</button></th>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Taux</th>
                        <th>Dégats</th>
                    </tr>
                    @foreach (var sk in skills)
                    {
                        <tr>
                            <td>@sk.Skill.Libelle</td>
                            <td>@sk.Skill.Description</td>
                            <td>@sk.Skill.Taux</td>
                            <td>@sk.Skill.Degats</td>
                        </tr>
                    }
                </table>
            }

            @if (perso.Inventaire != null)
            {
                <table class="table table-bordered detailsTab">
                    <tr>
                        <th colspan="6" class="text-center">Inventaire<button class="btn btn-primary pull-right" data-toggle="modal" data-target="#modifInventaire" type="button">Modifier</button></th>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Quantite</th>
                        <th>Prix</th>
                        <th>Commentaire</th>
                    </tr>


                    @foreach (var inv in inventaire)
                    {
                        <tr>
                            <td>@inv.Item.Nom</td>
                            <td>@inv.Item.Description</td>
                            <td>@(((ItemTypeEnum) inv.Item.TypeItem).ToString().ToSpacedCase())</td>
                            <td>@inv.Quantite</td>
                            @if (inv.Item.Prix == null)
                            {
                                <td>N/A</td>
                            }
                            else
                            {
                                <td>@inv.Item.Prix</td>
                            }
                            <td>@inv.Item.Commentaire</td>
                        </tr>
                    }

                </table>
            }
        </div>
    </div>

    <div id="modifPic" class="modal fade modifs" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center">Modification de l'image</h4>
                </div>
                <div class="modal-body">
                    <form asp-controller="Characters" asp-action="UpdatePic" method="post" enctype="multipart/form-data">
                        <!-- Image -->
                        <div>
                            <label for="picUpload">Choississez une nouvelle image (png, jpg, gif)</label>
                            <input id="picUpload" name="pic" class="center-block" type="file" />
                            <input asp-for="@perso.Id" type="hidden" />

                            <input type="button" id="btn-submit-file" value="Enregistrer" class="btn btn-primary" data-dismiss="modal"/>
                            <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <div id="modifCharac" class="modal fade modifs" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-center">Modification des caractéristiques</h4>
                </div>
                <div class="modal-body">
                    <form method="post" enctype="multipart/form-data">
                        <!-- Caractéristiques -->
                        <div class="text-center">
                            <label asp-for="@perso.Nom"></label> <input asp-for="@perso.Nom" type="text" />
                            <label asp-for="@perso.Race"></label>
                            <select asp-for="@perso.Race">
                                @foreach (var r in EnumUtil.GetValues<CharacterRaceEnum>())
                                {
                                    var race = r.ToString();
                                    if (r.ToString() != "NA")
                                    {
                                        race = r.ToString().ToKebabCase();
                                    }

                                    if (race == perso.Race.ToString())
                                    {
                                        <option selected="selected" value="@race">@race</option>
                                    }
                                    else
                                    {
                                        <option value="@race">@race</option>
                                    }
                                }
                            </select>
                        </div>

                        <br />

                        <table class="table">
                            <tr class="text-center">
                                <td>
                                    <label asp-for="@perso.Lvl"></label>
                                    <select asp-for="@perso.Lvl">
                                        @for (var i = 1; i <= 999; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <label asp-for="@perso.Xp"></label>
                                    <select asp-for="@perso.Xp">
                                        @for (var i = 0; i <= 99; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <label asp-for="@perso.Po"></label>
                                    <select asp-for="@perso.Po">
                                        @for (var i = 0; i <= 999; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </td>
                                <td>
                                    <label asp-for="@perso.TypePerso">Type</label>
                                    <select asp-for="@perso.TypePerso">
                                        @foreach (var type in EnumUtil.GetValues<CharacterTypeEnum>())
                                        {
                                            if (type == (CharacterTypeEnum)perso.TypePerso)
                                            {
                                                <option value="@((int)type)" selected="selected">@type.ToString().ToUpper()</option>
                                            }
                                            else
                                            {
                                                <option value="@((int)type)">@type.ToString().ToUpper()</option>
                                            }
                                        }
                                    </select>
                                </td>
                            </tr>
                        </table>
                        <input asp-for="@perso.Id" type="hidden" />

                        <br />

                        <div class="text-center">
                            <button type="button" class="btn btn-primary btn-submit-form" data-dismiss="modal">Enregistrer</button>
                            <button type="button" class="btn" data-dismiss="modal">Annuler</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

